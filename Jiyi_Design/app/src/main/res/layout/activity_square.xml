<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="广场"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="normal|bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/boder_square"
        android:layout_height="40dp">
    <Button
        android:id="@+id/button1"
        android:layout_width="178dp"
        android:text="吐槽圈"
        android:textSize="14dp"
        android:textColor="#1296db"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_marginLeft="2dp"
        android:layout_height="30dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/blue"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="朋友圈"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@color/blue"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/bg2"
        android:weightSum="1"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="54dp"
            android:src="@mipmap/heart_blue"
            android:layout_gravity="center_vertical"
            android:paddingLeft="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:paddingLeft="25dp"
                android:layout_marginTop="10dp"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend's Dynamic"
                android:textColor="@color/white"
                android:paddingLeft="25sp"
                android:layout_marginTop="5dp"
                android:typeface="sans"
                android:fontFamily="cursive"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="220dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/xlcs_imgbtn"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/xlcs"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="心理测试"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/xlys"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="心理医生"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/fdy"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="辅导员/班主任"
                    android:textColor="#000000"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/yd"
                        android:layout_gravity="center"
                        android:paddingTop="7dp"
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="运动"
                        android:textColor="#000000"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/tsg"
                        android:layout_gravity="center"
                        android:paddingTop="7dp"
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="图书馆"
                        android:textColor="#000000"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ys"
                        android:layout_gravity="center"
                        android:paddingTop="7dp"
                        android:scaleType="centerInside"
                        android:background="#FFFFFF"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="饮食"
                        android:textColor="#000000"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/kg"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="k歌"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ds"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="电竞"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/dy"
                    android:layout_gravity="center"
                    android:paddingTop="7dp"
                    android:scaleType="centerInside"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:text="电影"
                    android:textColor="#000000"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="214dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageButton
                android:layout_width="match_parent"
                android:background="@mipmap/jytp1"
                android:scaleType="centerCrop"
                android:layout_height="175dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="减压文章"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/jytp2"
                    android:layout_weight="0.89"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_height="match_parent"
                    android:text="减压图片"
                    android:gravity="center"
                    android:layout_width="25dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/jytp3"
                    android:layout_weight="0.89"
                    android:scaleType="centerCrop"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:text="减压图片"
                    android:gravity="center"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/foot_imgbtn"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/foot_before"
                android:background="#FFFFFF"
                android:layout_width="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="足迹"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/square_imgbtn"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/square_after"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广场"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/mine_imgbtn"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/mine_before"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
