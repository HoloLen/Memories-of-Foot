<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="足迹"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        android:layout_weight="0.06" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="85dp"
                android:src="@mipmap/photo"
                android:paddingLeft="35dp" />

            <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="繁"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingLeft="20sp"
                android:textStyle="normal|bold" />
            <TextView
                android:layout_width="130dp"
                android:layout_height="15dp"
                android:text="ID: 0000001"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:textSize="14dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:text="时间: "
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="183dp"
                    android:layout_height="25dp"
                    android:text=" 2017.05.06   14:25   -11℃"
                    android:gravity="left"
                    android:textColor="#1296db"
                    android:paddingTop="10dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="今日行走步数:"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="18953"
                    android:gravity="left"
                    android:textColor="#1296db"
                    android:paddingTop="5dp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="在好友中排名:"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3"
                    android:gravity="center_horizontal"
                    android:textColor="#1296db"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="名"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:textStyle="normal|bold" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="累计行走时长:"
                        android:textColor="#000000"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text="7"
                        android:gravity="right"
                        android:textColor="#1296db"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:text="小时"
                        android:textColor="#000000"
                        android:gravity="right"
                        android:textStyle="normal|bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="我的勋章:"
                    android:textColor="#000000"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textStyle="normal|bold" />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="20dp"
                    android:text="初级行者、吃货、觉皇"
                    android:textColor="#1296db"
                    android:gravity="right"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1296db"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/weather_imgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@mipmap/weather" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/data_imgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@mipmap/data"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#1296db"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/health_imgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@mipmap/health"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/jiyi_imgbtn"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@mipmap/f"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1296db"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>




    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           android:layout_gravity="bottom">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/foot_imgbtn"
                    android:layout_height="43dp"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@mipmap/foot_after"
                    android:background="#FFFFFF"
                    android:layout_width="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="足迹"
                    android:textColor="@color/gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/square_imgbtn"
                    android:layout_width="30dp"
                    android:layout_height="43dp"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@mipmap/square_before"
                    android:background="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广场"
                    android:textColor="@color/gray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/mine_imgbtn"
                    android:layout_width="25dp"
                    android:layout_height="43dp"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:src="@mipmap/mine_before"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <!--</LinearLayout>-->
<!--</LinearLayout>-->