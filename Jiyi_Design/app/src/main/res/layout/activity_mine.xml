<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fe.jiyi_design.MineActivity"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="normal|bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp">
        </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@mipmap/bg2"
                android:orientation="horizontal"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/jt"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:background="@mipmap/jt"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"/>
                <ImageButton
                    android:id="@+id/set"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@mipmap/set"
                    android:layout_marginLeft="325dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/photo"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:text="繁"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:textStyle="normal|bold"
            android:fontFamily="monospace"
            android:typeface="monospace" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 0000001"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1296db"
            android:layout_marginTop="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/wdxx"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的消息"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/point"
                android:layout_marginLeft="210dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8a8a8a"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/wz"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginLeft="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我赞过的文章"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
           <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#8a8a8a"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/test"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我做过的测试"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1296db"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1296db"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginLeft="35dp"
                android:src="@mipmap/xgmm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8a8a8a"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/gywm"
                android:layout_weight="0.04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1296db"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp" />
        <Button
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#FF3333"
            android:text="退出当前账号"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/foot_imgbtn"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/foot_before"
                android:background="#FFFFFF"
                android:layout_width="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="足迹"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/square_imgbtn"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/square_before"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广场"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/mine_imgbtn"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/mine_after"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
