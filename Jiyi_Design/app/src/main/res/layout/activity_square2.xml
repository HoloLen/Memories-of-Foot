<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_square2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fe.jiyi_design.Square2Activity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="广场"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="normal|bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:background="@drawable/boder_square"
        android:layout_height="35dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:text="吐槽圈"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@color/blue"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/blue"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="178dp"
            android:layout_height="30dp"
            android:text="朋友圈"
            android:textSize="14dp"
            android:textColor="#1296db"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginRight="2dp"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:src="@mipmap/talk"
        android:gravity="center"
        android:layout_gravity="center" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/foot_imgbtn"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/foot_before"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="足迹"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/square_imgbtn"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/square_after"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广场"
                android:textColor="@color/gray"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/mine_imgbtn"
                android:layout_width="25dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:src="@mipmap/mine_before"
                android:background="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
